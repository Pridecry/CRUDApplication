@model CRUDApplication.Models.User

<h1 class="display-5 text-center mb-4">User Deletion</h1>

<h3 class="display-5 text-center mb-4">Are you sure you want to delete this user?</h3>

<div class="jumbotron">
    <form method="post" autocomplete="off">
        <div class="form-group row">
            <div class="col-2 text-right">
                <label asp-for="Name" for="name" class="col-form-label"><b>Name</b></label>
            </div>
            <div class="col-10">
                <input asp-for="Name" type="text" id="name" class="form-control" disabled>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2 text-right">
                <label asp-for="Username" for="username" class="col-form-label"><b>Username</b></label>
            </div>
            <div class="col-10">
                <input asp-for="Username" type="text" id="username" class="form-control" disabled>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2 text-right">
                <label asp-for="Email" for="email" class="col-form-label"><b>Email</b></label>
            </div>
            <div class="col-10">
                <input asp-for="Email" type="text" id="email" class="form-control" disabled>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2 text-right">
                <label asp-for="Phone" for="phone" class="col-form-label"><b>Phone</b></label>
            </div>
            <div class="col-10">
                <input asp-for="Phone" type="text" id="phone" class="form-control" disabled>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2 text-right">
                <label asp-for="Website" for="website" class="col-form-label"><b>Website</b></label>
            </div>
            <div class="col-10">
                <input asp-for="Website" type="text" id="website" class="form-control" disabled>
            </div>
        </div>

        <div class="row">
            <div class="col-auto offset-2 mt-2">
                <button type="submit" class="mdc-button mdc-button--raised">
                    <span class="mdc-button__label">Delete</span>
                </button>
                <a class="mdc-button mdc-button--raised" asp-controller="User" asp-action="Index">
                    <span class="mdc-button__label">Back to list</span>
                </a>
            </div>
        </div>
    </form>
</div>
