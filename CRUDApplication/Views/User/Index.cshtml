@model List<CRUDApplication.Models.User>

<h1 class="display-5 text-center">User List</h1>

<div class="mdc-layout-grid">
    <div class="mdc-layout-grid__inner">
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-2"></div>
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-8">
            <div class="mdc-data-table w-100">
                <div class="mdc-data-table__table-container">
                    <table class="mdc-data-table__table">
                        <thead>
                            <tr class="mdc-data-table__header-row">
                                <th class="mdc-data-table__header-cell">Name</th>
                                <th class="mdc-data-table__header-cell">Username</th>
                                <th class="mdc-data-table__header-cell">Email</th>
                                <th class="mdc-data-table__header-cell">Phone</th>
                                <th class="mdc-data-table__header-cell">Website</th>
                                <th class="mdc-data-table__header-cell text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="mdc-data-table__content">
                            @foreach (var user in Model)
                            {
                                <tr class="mdc-data-table__row">
                                    <th class="mdc-data-table__cell">@user.Name</th>
                                    <th class="mdc-data-table__cell">@user.Username</th>
                                    <th class="mdc-data-table__cell">@user.Email</th>
                                    <th class="mdc-data-table__cell">@user.Phone</th>
                                    <th class="mdc-data-table__cell">@user.Website</th>
                                    <th class="mdc-data-table__cell text-center">
                                        <a class="mdc-button" asp-controller="User" asp-action="Details" asp-route-id="@user.Id">
                                        <div class="mdc-button__ripple"></div>
                                        <span class="mdc-button__label">Details</span>
                                        </a>
                                        <a class="mdc-button" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">
                                            <div class="mdc-button__ripple"></div>
                                            <span class="mdc-button__label">Edit</span>
                                        </a>
                                        <a class="mdc-button" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id">
                                            <div class="mdc-button__ripple"></div>
                                            <span class="mdc-button__label">Delete</span>
                                        </a>
                                    </th>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="mdc-layout-grid__inner pt-5">
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-2"></div>
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-2">
            <a class="mdc-button mdc-button--raised" asp-controller="User" asp-action="Create">
                <span class="mdc-button__label">Create User</span>
            </a>
        </div>
    </div>
</div>
